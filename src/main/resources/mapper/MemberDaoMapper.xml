<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jejuro.server.dao.MemberDao">
	<insert id="insert" parameterType="com.jejuro.server.entities.Member">
		insert into member(email, password, nickName, phoneNum) 
		values(#{email}, #{password}, #{nickName}, #{phoneNum});
	</insert>
	
	<select id="get" resultType="com.jejuro.server.entities.Member">
		select * from member
		where email = #{email}
	</select>
	
	<delete id="delete" parameterType="com.jejuro.server.entities.Member">
		delete from member
		where email = #{email};
	</delete>
	
	<update id="update" parameterType="com.jejuro.server.entities.Member">
		update member
		<set>
			<if test="nickName != null">nickName=#{nickName},</if>
			<if test="password != null">password=#{password},</if>
			<if test="phoneNum != null">phoneNum=#{phoneNum}</if>
		</set>
		where email = #{email};
	</update>
</mapper>